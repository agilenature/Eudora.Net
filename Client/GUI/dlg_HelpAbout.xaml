<Window x:Class="Eudora.Net.GUI.dlg_HelpAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eudora.Net.GUI"
        mc:Ignorable="d"
        Title="About Eudora.Net" 
        Width="640"
        Height="360" 
         
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Background="#FF336799">
    
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Grid.RowSpan="2" Margin="0,0,0,0" 
               HorizontalAlignment="Center" VerticalAlignment="Stretch"
               Source="pack://application:,,,/GUI/res/images/logos/MainLogo.png"/>

        <Button Grid.Row="1" x:Name="btn_Close" 
                HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                Width="50" Height="30" Margin="0,0,0,8"
                VerticalContentAlignment="Center"
                Background="CornflowerBlue"
                Foreground="White"
                IsDefault="True"
                Content="close"
                Click="btn_Close_Click"/>

    </Grid>
</Window>
