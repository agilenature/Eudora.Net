<UserControl x:Class="Eudora.Net.GUI.uc_AttachmentsBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eudora.Net.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="{DynamicResource Control}">
        <ToolBar x:Name="Toolbar"
                 Height="24"
                 VerticalAlignment="Top"
                 Focusable="False"
                 Background="{DynamicResource Control}">
            <ToolBar.Header>
                <TextBlock FontWeight="Bold" Text="Attachments:"/>
            </ToolBar.Header>
        </ToolBar>
    </StackPanel>
    
</UserControl>
