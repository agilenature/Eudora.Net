<local:uc_TabBase x:Class="Eudora.Net.GUI.uc_MailboxesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eudora.Net.GUI"
             xmlns:root="clr-namespace:Eudora.Net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="{DynamicResource Control}" Orientation="Horizontal">
            
            <Label Padding="0,0,0,0" Margin="5,2,2,2" Content="Mailboxes" VerticalAlignment="Center"/>

            <Button x:Name="btn_New" DockPanel.Dock="Left" Click="btn_New_Click"  Margin="15,0,5,0" ToolTip="New Mailbox" VerticalAlignment="Center">
                <Button.Content>
                    <Image Source="pack://application:,,,/GUI/res/images/new/add.png"/>
                </Button.Content>
            </Button>
            <Button x:Name="btn_Delete" DockPanel.Dock="Left" Click="btn_Delete_Click" Margin="5,0,5,0" ToolTip="Delete Mailbox" VerticalAlignment="Center">
                <Button.Content>
                    <Image Source="pack://application:,,,/GUI/res/images/new/delete.png"/>
                </Button.Content>
            </Button>
        </StackPanel>
        <ListBox x:Name="Listview"
                 Grid.Row="1"  
                 Background="{DynamicResource Control}"
                 SelectionChanged="Listview_SelectionChanged"
                 MouseLeftButtonUp="Listview_MouseLeftButtonUp">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image Source="{Binding Path=ImageSource}" Width="20" Height="20"/>
                        <Separator Width="10" Background="Transparent" Foreground="Transparent"/>
                        <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</local:uc_TabBase>
