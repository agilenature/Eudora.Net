<local:uc_TabBase x:Class="Eudora.Net.GUI.uc_MailboxesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eudora.Net.GUI"
             xmlns:root="clr-namespace:Eudora.Net"
             xmlns:themer="clr-namespace:WpfThemer;assembly=WpfThemer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="24"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Grid.Column="0" Margin="5,0,0,0" Text="Mailboxes" VerticalAlignment="Center"/>

        <Button x:Name="btn_New" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"
                Style="{DynamicResource SmallPanelButton}"
                ToolTip="New Mailbox"
                Click="btn_New_Click">
            <Button.Content>
                <themer:DynamicImage SymbolName="add"/>
            </Button.Content>
        </Button>

        <Button x:Name="btn_Delete" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"
                Style="{DynamicResource SmallPanelButton}"
                ToolTip="Delete Mailbox"
                Click="btn_Delete_Click">
            <Button.Content>
                <themer:DynamicImage SymbolName="delete"/>
            </Button.Content>
        </Button>

        <ListBox x:Name="Listview"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 SelectionChanged="Listview_SelectionChanged"
                 MouseLeftButtonUp="Listview_MouseLeftButtonUp"
                 BorderThickness="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <Image Source="{Binding Path=ImageSource}" Width="20" Height="20"/>
                        <Separator Width="10" Background="Transparent" Foreground="Transparent"/>
                        <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</local:uc_TabBase>
